{% if not section.error or user %}
<section class="lsb_section">
	{% if section.title %}
	<div class="lsb_section__header">
		<h2 class="lsb_section__title">
		{% if section.link %}
			<a href="{{ section.link }}"><span>{{ section.title }}</span> <span>{{ section.subtitle }}</span></a>
		{% else %}
			<span>{{ section.title }}</span> <span>{{ section.subtitle }}</span>
		{% endif %}
		</h2>
	</div>
	{% endif %}
	{% if not section.error %}
	<div class="lsb_section__body {% block body_class %}{% endblock %}">
		{% block body %}
			{{ section.layout }}
		{% endblock %}
	</div>
	{% else %}
	<div class="lsb_section__body is-narrow">
		<strong>{{ __('Noe er galt', 'lsb') }}</strong>
		<br/>
		{{ __('Denne beskjeden vises kun til deg som er innlogget, ikke vanlige bes√∏kende.', 'lsb') }}
		<pre>{{ section.error | print_r }}</pre>
	</div>
	{% endif %}
</section>
{% endif %}